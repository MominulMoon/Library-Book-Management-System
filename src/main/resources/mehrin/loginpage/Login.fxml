<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mehrin.loginpage.LoginController"
      spacing="0"
      prefWidth="800" prefHeight="600">

    <!-- ðŸ”µ FULL WIDTH HEADING BAR -->
    <HBox style="-fx-background-color: #0B2A4A; -fx-padding: 10 25;"
          alignment="CENTER_LEFT">
        <Label text="Rajshahi University of Engineering &amp; Technology"
               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- â¬‡ï¸ LOGIN AREA -->
    <StackPane VBox.vgrow="ALWAYS" style="-fx-background-color: #a9c1e1;">
        <!-- Centered login card -->
        <HBox prefWidth="700" prefHeight="400"
              style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"
              alignment="CENTER">

            <!-- LEFT SIDE -->
            <VBox alignment="CENTER_LEFT"
                  spacing="15"
                  style="-fx-padding: 40;"
                  prefWidth="450">
                <Label text="Log in"
                       style="-fx-font-size: 26; -fx-font-weight: bold;" />

                <Label text="Username or Email" />
                <TextField fx:id="usernameField"
                           promptText="Enter your username or email" />

                <Label text="Password" />
                <PasswordField fx:id="passwordField"
                               promptText="Enter your password" />

                <Button text="Log In"
                        prefWidth="200"
                        onAction="#handleLogin"
                        style="-fx-background-color: #2F4F3E; -fx-text-fill: white;" />

                <Hyperlink text="Forgot Password?" />
            </VBox>

            <!-- RIGHT SIDE -->
            <VBox alignment="CENTER" prefWidth="250">
                <ImageView fx:id="imageView"
                           fitHeight="200"
                           fitWidth="200"
                           preserveRatio="true">
                    <image>
                        <Image url="@RUET.png"/>
                    </image>
                </ImageView>
            </VBox>

        </HBox>
    </StackPane>

</VBox>
