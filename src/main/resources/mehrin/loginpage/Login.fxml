<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="505.0" prefWidth="790.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mehrin.loginpage.LoginController">

    <!-- ðŸ”µ RUET STYLE HEADING BAR -->
    <HBox prefHeight="45"
          style="-fx-background-color: #0B2A4A; -fx-padding: 10 25;"
          alignment="CENTER_LEFT">
        <Label text="Rajshahi University of Engineering &amp; Technology"
               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- â¬‡ï¸ YOUR EXISTING LOGIN PAGE (UNCHANGED) -->
    <AnchorPane prefHeight="460.0" prefWidth="790.0"
                style="-fx-background-color: #a9c1e1;">

        <!-- Main Card -->
        <HBox layoutX="50" layoutY="50"
              prefHeight="406.0" prefWidth="690.0"
              styleClass="card">

            <!-- LEFT SIDE -->
            <VBox alignment="BOTTOM_LEFT"
                  prefHeight="406.0"
                  prefWidth="404.0"
                  spacing="15"
                  style="-fx-padding: 40;">

                <Label text="Log in"
                       style="-fx-font-size: 26; -fx-font-weight: bold;" />

                <Label text="Username or Email" />
                <TextField fx:id="usernameField"
                           promptText="Enter your username or email" />

                <Label text="Password" />
                <PasswordField fx:id="passwordField"
                               promptText="Enter your password" />

                <Button text="Log In"
                        prefWidth="200"
                        onAction="#handleLogin"
                        style="-fx-background-color: #2F4F3E; -fx-text-fill: white;" />

                <Hyperlink text="Forgot Password?" />
            </VBox>

            <!-- RIGHT SIDE -->
            <VBox alignment="CENTER"
                  prefHeight="406.0"
                  prefWidth="243.0">

                <ImageView fx:id="imageView"
                           fitHeight="204.0"
                           fitWidth="162.0"
                           preserveRatio="true">
                    <image>
                        <!-- âœ… FIXED image path -->
                        <Image url="@RUET.png"/>
                    </image>
                </ImageView>

            </VBox>

        </HBox>

    </AnchorPane>

</VBox>
